<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Food Type (Veg/Non-Veg) -->
    <TextView
        android:id="@+id/food_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non-veg"
        android:textColor="#FF0000"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <!-- Food Name -->
    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_type"
        android:layout_marginTop="2dp"
        android:text="Fish Finger"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <!-- Quantity and Price Section -->
    <RelativeLayout
        android:id="@+id/quantity_price_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <!-- Capsule Background -->
        <LinearLayout
            android:id="@+id/capsule_background"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:orientation="horizontal"
            android:background="@drawable/capsule_background"
            android:padding="4dp"
            android:gravity="center">

            <!-- Decrease Button -->
            <TextView
                android:id="@+id/decrease_quantity"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="-"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:color/transparent" />

            <!-- Quantity Display -->
            <TextView
                android:id="@+id/quantity"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="1"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:background="@android:color/transparent" />

            <!-- Increase Button -->
            <TextView
                android:id="@+id/increase_quantity"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="+"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Price -->
        <TextView
            android:id="@+id/food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/capsule_background"
            android:text="â‚¹370"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000"
            android:gravity="center" />
    </RelativeLayout>

</RelativeLayout>
